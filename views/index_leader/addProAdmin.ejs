<form action="/leaderModel/addAdmin/<%=projects[0].projectId%>" id="formAddProAdmin" class=" bs-component form-horizontal" method='post'>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myLargeModalLabel"><span style="color: #ffffff">指定版本管理员</span></h4>
    </div>
    <div  class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <!--<div class="col-lg-1"></div>-->
                <div class="col-lg-11">

                    <div class="form-group">
                        <label for="inputTaskList" class="col-sm-2 control-label">指定版本管理员</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" class="form-control" id="checkProAdmin" name="checkProAdmin" placeholder="输入人员账号或姓名">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <ul id="selectUl" class="dropdown-menu dropdown-menu-right" role="menu">
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div >
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button id="btnSubmitProAdmin" type="button" class="btn btn-primary" data-dismiss="modal">确定添加</button>
        </div>
    </div>
</form>



<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/bootstrap-suggest.js"></script>
<script>
    var ejsData_addProAdmin;<!--获取后台参数-->
    ejsData_addProAdmin = {
        proAllUser: <%- JSON.stringify(proAllUser_disp) %>
    };

    /**
     * 展示所有可选择的走查人员供组长选择
     * @param userNameAndRealName
     */
    function showSelectUser(){
        var proAllUser = ejsData_addProAdmin.proAllUser;
        $("#checkProAdmin").bsSuggest({
            indexId: 0, //data.value 的第几个数据，作为input输入框的内容
            indexKey: 0, //data.value 的第几个数据，作为input输入框的内容
            data: {
                'value':proAllUser,
                'defaults':''
            }
        });
    }

    showSelectUser();

    $('#btnSubmitProAdmin').click(function(){
        $('#formAddProAdmin').submit();
    });
</script>



