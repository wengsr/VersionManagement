<!--修改用户资料-->
<form action="/users/modifyUserInfo" class=" bs-component form-horizontal" method='post'>
    <div class="form-group">
        <label for="inputRealName" class="col-sm-3 control-label">真实姓名</label>
        <div class="col-sm-6 input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <input type="text" value="<%=user==null?'':user.realName=='null'?'':user.realName==''?'':user.realName%>" class="form-control"  name="realName" id="realName" placeholder="请输入真实姓名">
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-3 control-label">邮箱</label>
        <div class="col-sm-6 input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            <input type="text" value="<%=user==null?'':user.email=='null'?'':user.email==''?'':user.email%>" class="form-control"  name="email" id="email" placeholder="请输入邮箱地址">
        </div>
    </div>

    <div class="form-actions">
        <a href="/"><button type="button" class="btn btn-default">返回</button></a>
        <button type="submit" class="btn btn-default"><span style="color:#337ab7;font-weight:bold;">确认修改</span></button>
    </div>
</form>