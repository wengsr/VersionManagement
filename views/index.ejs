<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.2/css/bootstrap.min.css">
      <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
  <%- message %>
  <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar">aaa</span>
                  <span class="icon-bar">ddd</span>
                  <span class="icon-bar">fff</span>
              </button>
              <a class="navbar-brand" href="#">AILK-CRM 版本管理系统</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul id="navMenu" class="nav navbar-nav">
                  <li><a href="#">首页<span class="sr-only">(current)</span></a></li>
                  <!--<li class="active"><a id="btnAddTask" href="#">申请变更单</a></li>-->
                  <%if(menus&&menus!=null){ var secFlag=false; var thirdFlag=false;%>
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">操作<span class="caret"></span></a>
                      <ul class="dropdown-menu" role="menu">
                            <% menus.forEach(function(menu){ %>
                                <%var menuId = menu.menuId; var menuName = menu.menuName; var menuBtnName=menu.menuBtnName; var menuUrl=menu.url;%>
                                <% if(menuId<=3){ %>
                                    <li><a class="menuBtn" btnName="<%=menuBtnName%>" btnUrl="<%=menuUrl%>" href="#" id="<%= menuName %>"> <%= menuName %> </a></li>
                                <% }else if(menuId>3 && menuId<=5){  %>
                                    <% if(!secFlag){ %><!--分隔条-->
                                        <li class="divider"></li>
                                    <% secFlag=true;} %>
                                    <li><a class="menuBtn" btnName="<%=menuBtnName%>" btnUrl="<%=menuUrl%>" href="#"> <%= menuName %> </a></li>
                                <% }else if(menuId>5){  %>
                                    <% if(!thirdFlag){ %><!--分隔条2-->
                                        <li class="divider"></li>
                                    <% thirdFlag=true;} %>
                                    <li><a class="menuBtn" btnName="<%=menuBtnName%>" btnUrl="<%=menuUrl%>" href="#"> <%= menuName %> </a></li>
                                <% } %>
                            <% }) %>
                      </ul>
                  </li>
                  <% } %>
              </ul>
              <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                      <input type="text" class="form-control" placeholder="输入变更单号搜索">
                  </div>
                  <button type="submit" class="btn btn-default">搜索</button>
              </form>
              <ul class="nav navbar-nav navbar-right">
                  <%if(!user){ %>
                      <li class="dropdown"><a href="/users/login">登录</a></li>
                      <li class="dropdown"></li>
                      <li class="dropdown"><a href="/users/reg">注册</a></li>
                  <% } else { %>
                      <li class="dropdown"><a href="#">当前用户：(<%=user.userName%>)</a></li>
                      <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">设置<span class="caret"></span></a>
                          <ul class="dropdown-menu" role="menu">
                              <li><a href="#">修改资料</a></li>
                              <li class="divider"></li>
                              <li><a href="/users/logout">退出</a></li>
                          </ul>
                      </li>
                  <% } %>
              </ul>
          </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
  </nav>

  <% if(tasks){%>
  <div class="container-fluid">
      <div class="panel panel-primary">
          <div class="panel-heading">我的待处理任务</div>
          <div class="panel-body table-responsive">
              <table class="table">
                  <thead>
                  <tr>
                      <th>#</th>
                      <th>变更单号</th>
                      <th>变更单名称</th>
                      <th>申请人</th>
                      <th>状态</th>
                      <th>环节</th>
                      <th>处理人</th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                      <td>1</td>
                      <td><a>ncrm00001</a></td>
                      <td><a>云南智能版CRM变更单-20150122-把调用刮刮卡系统地址改为从配置平台读取-hezf2-001</a></td>
                      <td>何兆飞</td>
                      <td>走查通过</td>
                      <td>上库</td>
                      <td>郭丽丽</td>
                  </tr>
                  <% tasks.forEach(function(task,i){ var psId=task.processStepId%>
                      <tr>
                          <td><%=i+1%></td>
                          <td><a><%=task.taskcode%></a></td>
                          <td><a id="task_<%=task.taskid%>" dealerName="<%=task.dealerName%>" step="taskProcessStepId_<%=task.processStepId%>" taskid="<%=task.taskid%>" taskcreater="<%=task.creater%>"><%=task.taskname%></a></td>
                          <td><%=task.createrName%></td>
                          <td><%=task.state%></td>
                          <td><%=task.stepName%></td>
                          <td><%=task.dealerName==null?'':task.dealerName%></td>
                      </tr>
                  <% }); %>
                 </tbody>
              </table>

          </div>
          <% if(taskCount){%>
          <div class="panel-footer">共<%=taskCount%>条</div>
          <% } %>
      </div>
  </div>
  <% }%>
  <div id="divModelDialog" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
          <div class="modal-content" id="divModel">

          </div>
      </div>
  </div>

  </div>



  <!--
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>-->
  </body>
  <!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
  <script src="http://cdn.bootcss.com/jquery/1.11.2/jquery.min.js"></script>
  <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
  <script src="http://cdn.bootcss.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  <script src="/javascripts/index.js"></script>
</html>
